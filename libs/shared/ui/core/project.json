{
  "name": "shared-ui-core",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/ui/core/src",
  "prefix": "card",
  "projectType": "library",
  "tags": [
    "scope:shared",
    "type:ui"
  ],
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}"
      ],
      "options": {
        "project": "libs/shared/ui/core/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/ui/core/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/shared/ui/core/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/shared/ui/core/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}