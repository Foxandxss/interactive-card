{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@card/card-feature-form": ["libs/card/feature-form/src/index.ts"],
      "@card/card-feature-shell": ["libs/card/feature-shell/src/index.ts"],
      "@card/shared-data-access-api": ["libs/shared/data-access/api/src/index.ts"],
      "@card/shared-data-access-api/mocks": ["libs/shared/data-access/api/mocks/src/index.ts"],
      "@card/shared-data-access-router": ["libs/shared/data-access/router/src/index.ts"],
      "@card/shared-data-access-testing": ["libs/shared/data-access/testing/src/index.ts"],
      "@card/shared-ui-components": ["libs/shared/ui/components/src/index.ts"],
      "@card/shared-ui-components/card": ["libs/shared/ui/components/card/index.ts"],
      "@card/shared-ui-components/skeleton": ["libs/shared/ui/components/skeleton/index.ts"],
      "@card/shared-ui-core": ["libs/shared/ui/core/index.ts"],
      "@card/shared-ui-core/*": ["libs/shared/ui/core/*"],
      "@card/shared-util-environment": ["libs/shared/util/environment/src/index.ts"],
      "@card/shared-util-faker": ["libs/shared/util/faker/src/index.ts"],
      "@card/shared-util-form": ["libs/shared/util/form/src/index.ts"],
      "@card/shared-util-validators": ["libs/shared/util/validators/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
